    },
    {
      "directory": "packages/edgedb",
      "changeProcessCWD": true
    },
    {
      "directory": "packages/lambda-utils",
      "changeProcessCWD": true
    },
    {
      "directory": "packages/sst-stacks",
      "changeProcessCWD": true
    },
    {
      "directory": "packages/trpc",
      "changeProcessCWD": true
    },
    {
      "directory": "packages/trpc-mux",
      "changeProcessCWD": true
    },
    {
      "directory": "services/auth",
      "changeProcessCWD": true
