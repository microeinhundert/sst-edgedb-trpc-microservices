{
  "name": "site",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/microeinhundert/sst-edgedb-trpc-microservices.git",
    "directory": "apps/site"
  },
  "type": "commonjs",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i app/styles/app.css -o app/styles/app-compiled.css",
    "dev": "concurrently \"npm run dev:css\" \"sst-env -- remix dev\"",
    "dev:css": "tailwindcss -w -i app/styles/app.css -o app/styles/app-compiled.css",
    "lint": "TIMING=1 eslint . --ext=.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint -- --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@sst-app/eslint-config-custom"
    ],
    "root": true
  },
  "dependencies": {
    "@remix-run/node": "^1.7.5",
    "@remix-run/react": "^1.7.5",
    "@remix-run/serve": "^1.7.5",
    "@sst-app/trpc-gateway": "*",
    "@sst-app/auth-utils": "*",
    "@trpc/client": "10.0.0-rc.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "superjson": "^1.11.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.5",
    "@serverless-stack/static-site-env": "^1.6.6",
    "@sst-app/eslint-config-custom": "*",
    "@sst-app/types": "*",
    "@sst-app/tsconfig": "*",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "@types/node": "^16",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.5.0",
    "tailwindcss": "^3.2.4"
  }
}
