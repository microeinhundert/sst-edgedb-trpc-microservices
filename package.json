{
  "name": "sst-app-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "functions/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "edgedb:create-migration": "turbo run create-migration --filter=*/edgedb",
    "edgedb:generate-query-builder": "turbo run generate-query-builder --filter=*/edgedb",
    "edgedb:link": "turbo run link --filter=*/edgedb",
    "edgedb:migrate": "turbo run migrate --filter=*/edgedb",
    "sst:build": "sst build",
    "sst:console": "sst console",
    "sst:deploy": "sst deploy",
    "sst:remove": "sst remove",
    "sst:start": "sst start",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "turbo run lint",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "*.{ts,tsx,md,json}": "npm run format"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 100,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "@sst-app/eslint-config-custom"
    ],
    "root": true
  },
  "devDependencies": {
    "@serverless-stack/cli": "1.8.1",
    "@serverless-stack/resources": "1.8.1",
    "@sst-app/eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "turbo": "^1.4.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
